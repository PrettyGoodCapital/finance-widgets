{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "diagnostics": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es2022", "dom"],
    "paths": {
      "*": ["./src/types/*"]
    }
  }
}
